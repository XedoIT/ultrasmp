options:
    prefix: &4[&6&lS&e&lM&6&lP&4]

    confirm_sound: block.note_block.pling
    error_sound: entity.enderman.teleport
    check_sound: entity.player.levelup

on chat:
    if {sm::%player%::gmsurvival} is true:
        cancel event
        set {_p} to message parsed as offline player
        if gamemode of {_p} is not survival:
            set gamemode of {_p} to survival
            set {gm::%{_p}%::status} to "&fSopravvivenza"
            set {_p}'s flight mode to false
            delete {fly::%{_p}%}
            set {fly::%{_p}%::status} to "&cNo"
            delete {fly::%{_p}%::ab}
            send "{@prefix} &7Modalità di gioco impostata a &9Sopravvivenza &7per &6%{_p}%&7."
            send "{@prefix} &6%player% &7ha impostato la tua modalità di gioco in &9Sopravvivenza&7." to {_p}
            delete {sm::%player%::gmsurvival}
            openServerUtility(player)
        else:
            send "{@prefix} &6%{_p}% &cè già in modalità &asopravvivenza&c!"
            play sound "entity.enderman.teleport" with volume 1 and pitch 0 at player for player
            delete {sm::%player%::gmsurvival}
            openServerUtility(player)
    else if {sm::%player%::gmcreative} is true:
        cancel event
        set {_p} to message parsed as offline player
        if gamemode of {_p} is not creative:
            set gamemode of {_p} to creative
            set {gm::%{_p}%::status} to "&fCreativa"
            set {_p}'s flight mode to true
            set {fly::%{_p}%} to true
            set {fly::%{_p}%::status} to "&aSì"
            send "{@prefix} &7Modalità di gioco impostata a &aCreativa &7per &6%{_p}%&7."
            send "{@prefix} &6%player% &7ha impostato la tua modalità di gioco in &aCreativa&7." to {_p}
            delete {sm::%player%::gmcreative}
            openServerUtility(player)
        else:
            send "{@prefix} &6%{_p}% &cè già in modalità &acreativa&c!"
            play sound "entity.enderman.teleport" with volume 1 and pitch 0 at player for player
            delete {sm::%player%::gmcreative}
            openServerUtility(player)
    else if {sm::%player%::gmadventure} is true:
        cancel event
        set {_p} to message parsed as offline player
        if gamemode of {_p} is not adventure:
            set gamemode of {_p} to adventure
            set {gm::%{_p}%::status} to "&fAvventura"
            set {_p}'s flight mode to false
            delete {fly::%{_p}%}
            set {fly::%{_p}%::status} to "&cNo"
            delete {fly::%{_p}%::ab}
            send "{@prefix} &7Modalità di gioco impostata a &2Avventura &7per &6%{_p}%&7."
            send "{@prefix} &6%player% &7ha impostato la tua modalità di gioco in &2Avventura&7." to {_p}
            delete {sm::%player%::gmadventure}
            openServerUtility(player)
        else:
            send "{@prefix} &6%{_p}% &cè già in modalità &aavventura&c!"
            play sound "entity.enderman.teleport" with volume 1 and pitch 0 at player for player
            delete {sm::%player%::gmadventure}
            openServerUtility(player)
    else if {sm::%player%::gmspectator} is true:
        cancel event
        set {_p} to message parsed as offline player
        if gamemode of {_p} is not spectator:
            set gamemode of {_p} to spectator
            set {gm::%{_p}%::status} to "&fSpettatore"
            set {fly::%{_p}%::status} to "&aSì"
            send "{@prefix} &7Modalità di gioco impostata a &bSpettatore &7per &6%{_p}%&7."
            send "{@prefix} &6%player% &7ha impostato la tua modalità di gioco in &bSpettatore&7." to {_p}
            delete {sm::%player%::gmspectator}
            openServerUtility(player)
        else:
            send "{@prefix} &6%{_p}% &cè già in modalità &aspettatore&c!"
            play sound "entity.enderman.teleport" with volume 1 and pitch 0 at player for player
            delete {sm::%player%::gmspectator}
            openServerUtility(player)

on death of player:
    if {difficulty::hardcore_mode} is true:
        if {hardcore_teleport} is true:
            if {settings::%victim%::genre::male} is true:
                set gamemode of victim to spectator
                set death message to "&4%victim% &cè morto. Non potrà giocare più finché la difficoltà sarà impostata su &4&lHardcore&c."
                set {death_location} to victim's position
                send "{@prefix} &4&lSei morto! &cAttendi la modifica della difficoltà per tornare in vita." to victim
            else if {settings::%victim%::genre::female} is true:
                set gamemode of victim to spectator
                set death message to "&4%victim% &cè morta. Non potrà giocare più finché la difficoltà sarà impostata su &4&lHardcore&c."
                set {death_location} to victim's position
                send "{@prefix} &4&lSei morta! &cAttendi la modifica della difficoltà per tornare in vita." to victim
            
every tick:
    loop all players:
        if {difficulty::hardcore_mode} is not set:
            if {hardcore_teleport} is true:
                if {settings::%loop-player%::genre::male} is true:
                    if gamemode of loop-player is spectator:
                        teleport loop-player to {death_location}
                        set gamemode of loop-player to survival
                        send "{@prefix} &7Ti ho portato al tuo punto di morte." to loop-player
                        send "&4[&c&lTP-DEATH&4] &7Ho teletrasportato &c%loop-player% &7al punto in cui è morto in difficoltà &4&lHardcore&7." to console
                        play sound "entity.enderman.teleport" with volume 1 at loop-player for loop-player
                else if {settings::%loop-player%::genre::female} is true:
                    if gamemode of loop-player is spectator:
                        teleport loop-player to {death_location}
                        set gamemode of loop-player to survival
                        send "{@prefix} &7Ti ho portata al tuo punto di morte." to loop-player
                        send "&4[&c&lTP-DEATH&4] &7Ho teletrasportato &c%loop-player% &7al punto in cui è morta in difficoltà &4&lHardcore&7." to console
                        play sound "entity.enderman.teleport" with volume 1 at loop-player for loop-player

