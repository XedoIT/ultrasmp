    permission message: {@hide_prefix} &cComando sconosciuto.
    executable by: player, console
    trigger:
        if sender is player:
            if arg-1 is not set:
                if {combat.%player%} is not set:
                    send "{@prefix} &7Attualmente non sei in combattimento."
