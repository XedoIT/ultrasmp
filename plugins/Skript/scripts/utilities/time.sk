options:
	prefix: &8[&b&lORARIO&8]

command /orario:
	description: "Qualcuno sa dirmi che ora Ã¨?"
	executable by: player, console
	trigger:
		if sender is player:
			send "{@prefix} &aSono le &b%time%&a."
			stop
		else:
			send "&cSolo i giocatori possono eseguire questo comando!"
			stop

at 06:00 in "smp":
	add 1 to {days.overworld}
	add 1 to {days.total}

at 06:00 in "smp_nether":
	add 1 to {days.nether}
	add 1 to {days.total}

at 06:00 in "smp_the_end":
	add 1 to {days.end}
	add 1 to {days.total}

